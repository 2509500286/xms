@model Xms.Web.Customize.Models.DashBoardModel

<div class="panel panel-default" id="gridview">
    <div class="panel-heading">
        <div class="panel-title">
            <strong>@app.PageTitle</strong>
            <div class="pull-right">
                <a class="btn btn-info btn-xs" data-toggle="collapse"
                   href="#collapseOne">
                    <span class="caret"></span> @app.T["search"]
                </a>
                <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/dashboard/createdashboard"><span class="glyphicon glyphicon-file"></span> @app.T["add"]</a>
            </div>
        </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
        <!--in-->
        <div class="panel-body">
            <form action="/@app.OrganizationUniqueName/customize/dashboard/index" method="get" id="searchForm" class="form-horizontal" role="form">
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="Name">@app.T["dashboard_name"]</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search"></span> @app.T["search"]</button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed" id="datatable" data-refresh="rebind()" data-ajax="true" data-ajaxcontainer="gridview" data-ajaxcallback="ajaxgrid_reset()" data-sortby="@Model.SortBy.ToLower()" data-sortdirection="@Model.SortDirection" data-pageurl="@app.Url">
            <thead>
                <tr>
                    <th width="2%"><input type="checkbox" name="checkall" /></th>
                    <th width="15%" data-name="name">
                        @app.T["dashboard_name"]
                    </th>
                    <th data-name="description">
                        @app.T["dashboard_description"]
                    </th>
                    <th width="5%" data-name="statecode">
                        @app.T["dashboard_state"]
                    </th>
                    <th width="15%" data-name="createdon">
                        @app.T["dashboard_createdon"]
                    </th>
                    <th width="30%">@app.T["operation"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr data-dbclick="location.href='@("/"+app.OrganizationUniqueName)/customize/dashboard/editdashboard?solutionid=@Model.SolutionId&id=@item.SystemFormId'">
                        <td><input type="checkbox" value="@item.SystemFormId" name="recordid" /></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@Html.Raw(item.StateCode == RecordState.Disabled ? "<span class=\"label label-default\">" + app.T["disabled"] + "</span>" : "<span class=\"label label-info\">" + app.T["enabled"] + "</span>")</td>
                        <td>@item.CreatedOn</td>
                        <td>
                            <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/dashboard/renderdashboard?id=@item.SystemFormId" target="_blank"><span class="glyphicon glyphicon-play-circle"></span> @app.T["preview"]</a>
                            <a class="btn btn-default btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/dashboard/editdashboard?id=@item.SystemFormId"><span class="glyphicon glyphicon-edit"></span> @app.T["edit"]</a>
                            <a class="btn btn-default btn-xs" href="javascript:CopyRecord('@item.SystemFormId')"><span class="glyphicon glyphicon-file"></span> @app.T["copy"]</a>
                            <a class="btn btn-warning btn-xs" href="javascript:Xms.Web.Del('@item.SystemFormId','/customize/dashboard/deletedashboard',false,rebind,null,'@app.T["confirm_delete"]',true)"><span class="glyphicon glyphicon-trash"></span> @app.T["delete"]</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" class="active">
                        <div class="form-group form-inline" role="form">
                            <button type="button" class="btn btn-xs btn-primary" data-action="/customize/dashboard/deletedashboard" data-role="delete" data-tooltip="@app.T["confirm_batchdelete"]"><span class="glyphicon glyphicon-trash"></span> @app.T["batch_delete"]</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/dashboard/SetDashBoardState?isenabled=true" data-role="update"><span class="glyphicon glyphicon-ok-circle"></span> @app.T["enabled"]</button>
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/dashboard/SetDashBoardState?isenabled=false" data-role="update"><span class="glyphicon glyphicon-ban-circle"></span> @app.T["disabled"]</button>
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-4">
                @(app.T["pagination_label"].Replace("{page}", Model.Page.ToString()).Replace("{totalpages}", Model.TotalPages.ToString()).Replace("{totalitems}", Model.TotalItems.ToString()))
            </div>
            <div id="page-selection" class="col-sm-8" data-total="@Model.TotalPages" data-page="@Model.Page"></div>
        </div>
    </div>
</div>
<!-- （Modal） -->
<div class="modal fade" id="copyModal" tabindex="-1" role="dialog"
     aria-labelledby="copyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">
                    @app.T["times_sign"]
                </button>
                <h4 class="modal-title" id="navGroupModalLabel">
                    @(app.T["copy"] + app.T["form"])
                </h4>
            </div>
            <div class="modal-body">
                <form id="copyForm" action="@("/"+app.OrganizationUniqueName)/customize/dashboard/copydashboard" method="post" class="form-horizontal">
                    <input name="systemformid" type="hidden" />
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-md-2 col-xs-2  control-label">@app.T["name"]</label>
                        <div class="col-sm-10 col-md-10 col-xs-10">
                            <input id="name" name="name" type="text" class="form-control input-sm required" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span> @app.T["cancel"]
                </button>
                <button type="button" class="btn btn-primary" onclick="CopyPost()">
                    <span class="glyphicon glyphicon-ok"></span> @app.T["confirm"]
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section Header {
}
@section Scripts {
    <script src="/content/js/jquery.bootpag.min.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script src="/content/js/jquery.form.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script>
        var pageUrl = '';
        $(function () {
            pageUrl = $("#datatable").attr('data-pageurl');
            $('#searchForm').ajaxSearch('#gridview', ajaxgrid_reset);
            $("#datatable").ajaxTable();
            ajaxgrid_reset();
        });
        function ajaxgrid_reset() {
            pag_init();
            Xms.Web.DataTable($("#datatable"));
        }
        function pag_init() {
            $('#page-selection').bootpag({
                total: $('#page-selection').attr('data-total')
                , maxVisible: 10
                , page: $('#page-selection').attr('data-page')
                , leaps: false
                , prev: '&lsaquo;'
                , next: '&rsaquo;'
                , firstLastUse: true
                , first: '&laquo;'
                , last: '&raquo;'
            }).on("page", function (event, /* page number here */ num) {
                event.preventDefault();
                pageUrl = $("#datatable").attr('data-pageurl');
                var url = $.setUrlParam(pageUrl, 'page', num);
                $("#gridview").ajaxLoad(url, "#gridview", function (response) {
                    ajaxgrid_reset();
                });
                return false;
            });
        }
        function rebind() {
            $('#searchForm').submit();
        }
        function CopyRecord(id) {
            $('#copyForm').find('input[name=systemformid]').val(id);
            $('#copyModal').modal('show');
        }
        function CopyPost() {
            $('#copyForm').ajaxForm(function (response) {
                if (response.IsSuccess) {
                    Xms.Web.Toast(response.Content, true);
                    $('#copyModal').modal('hide');
                    //location.reload(true);
                    rebind();
                    return;
                }
                Xms.Web.Alert(false, response.Content);
            });
            $('#copyForm').submit();
        }
    </script>
}