@model Xms.Web.Customize.Models.FormModel

<div class="panel panel-info" id="gridview">
    <div class="panel-heading">
        <div class="panel-title">
            <strong>@Model.Entity.LocalizedName - @app.PageTitle</strong>
            <div class="pull-right">
                <a class="btn btn-info btn-xs" data-toggle="collapse"
                   href="#collapseOne">
                    <span class="caret"></span> @app.T["search"]
                </a>
                <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/systemform/createform?solutionid=@Model.SolutionId&entityid=@Model.EntityId" target="_blank"><span class="glyphicon glyphicon-file"></span> @app.T["add"]</a>
            </div>
        </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
        <!--in-->
        <div class="panel-body">
            <form action="/@app.OrganizationUniqueName/customize/@app.ControllerName/@app.ActionName" method="get" id="searchForm" class="form-horizontal" role="form">
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.SolutionId)
                @Html.HiddenFor(x => x.EntityId)
                <div class="form-group col-sm-6">
                    <label class="col-sm-3 control-label" for="Name">名称</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search"></span> 查询</button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-condensed" id="datatable" data-refresh="rebind()" data-ajax="true" data-ajaxcontainer="gridview" data-ajaxcallback="ajaxgrid_reset()" data-sortby="@Model.SortBy.ToLower()" data-sortdirection="@Model.SortDirection" data-pageurl="@app.Url">
            <thead>
                <tr>
                    <th width="2%"><input type="checkbox" name="checkall" /></th>
                    <th data-name="name">
                        名称
                    </th>
                    <th width="10%" data-name="isdefault">
                        默认
                    </th>
                    <th width="10%" data-name="statecode">
                        状态
                    </th>
                    <th width="15%" data-name="createdon">
                        创建日期
                    </th>
                    <th width="35%">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr data-dbclick="Xms.Web.OpenWindow('@("/"+app.OrganizationUniqueName)/customize/systemform/editform?solutionid=@Model.SolutionId&id=@item.SystemFormId')">
                        <td><input type="checkbox" value="@item.SystemFormId" name="recordid" /></td>
                        <td>@item.Name</td>
                        <td>@Html.Raw(item.IsDefault ? "<span class=\"label label-info\">是</span>" : "<span class=\"label label-default\">否</span>")</td>
                        <td>@Html.Raw(item.StateCode == Xms.Core.RecordState.Enabled ? "<span class=\"label label-info\">启用</span>" : "<span class=\"label label-default\">禁用</span>")</td>
                        <td>@item.CreatedOn</td>
                        <td>
                            <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/entity/create?entityid=@item.EntityId&formid=@item.SystemFormId" target="_blank"><span class="glyphicon glyphicon-play-circle"></span> 预览</a>
                            <a class="btn btn-default btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/systemform/editform?id=@item.SystemFormId&solutionid=@Model.SolutionId" target="_blank"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                            <a class="btn btn-default btn-xs" href="javascript:CopyRecord('@item.SystemFormId')"><span class="glyphicon glyphicon-file"></span> @app.T["copy"]</a>
                            <a class="btn btn-default btn-xs" href="javascript:CustomButtons('@item.SystemFormId','@item.EntityId',@(item.IsCustomButton?"true":"false"),'@item.CustomButtons')"><span class="glyphicon glyphicon-flash"></span> 按钮</a>
                            @if (!item.IsDefault)
                            {
                                <a class="btn btn-warning btn-xs" href="javascript:Xms.Web.Del('@item.SystemFormId','/customize/systemform/deleteform',false,rebind,null,'确认删除？请提前备份数据',true)"><span class="glyphicon glyphicon-trash"></span> 删除</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="active">
                        <div class="form-group form-inline" role="form">
                            <button type="button" class="btn btn-xs btn-primary" data-action="/customize/systemform/deleteform" data-role="delete" data-tooltip="删除后相关数据也将一并删除，请提前备份数据"><span class="glyphicon glyphicon-trash"></span> 批量删除</button>
                            <button type="button" class="btn btn-xs btn-primary" data-action="/customize/systemform/SetFormDefault?isdefault=true&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-check"></span> 设为默认</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/systemform/SetFormState?isenabled=true&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-ok-circle"></span> 启用</button>
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/systemform/SetFormState?isenabled=false&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-ban-circle"></span> 禁用</button>
                            </div>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-4">
                @(app.T["pagination_label"].Replace("{page}", Model.Page.ToString()).Replace("{totalpages}", Model.TotalPages.ToString()).Replace("{totalitems}", Model.TotalItems.ToString()))
            </div>
            <div id="page-selection" class="col-sm-8" data-total="@Model.TotalPages" data-page="@Model.Page"></div>
        </div>
    </div>
</div><!-- （Modal） -->
<div class="modal fade" id="copyModal" tabindex="-1" role="dialog"
     aria-labelledby="copyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">
                    @app.T["times_sign"]
                </button>
                <h4 class="modal-title" id="navGroupModalLabel">
                    @(app.T["copy"] + app.T["form"])
                </h4>
            </div>
            <div class="modal-body">
                <form id="copyForm" data-jsonajax="true" action="@("/"+app.OrganizationUniqueName)/customize/systemform/copyform" method="post" class="form-horizontal">
                    <input name="systemformid" type="hidden" />
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-md-2 col-xs-2  control-label">@app.T["name"]</label>
                        <div class="col-sm-10 col-md-10 col-xs-10">
                            <input id="name" name="name" type="text" class="form-control input-sm required" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span> @app.T["cancel"]
                </button>
                <button type="button" class="btn btn-primary" onclick="CopyPost()">
                    <span class="glyphicon glyphicon-ok"></span> @app.T["confirm"]
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Header {
}
@section Scripts {
    <script src="/content/js/jquery.bootpag.min.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script src="~/content/js/jquery-validate/jquery.validate.min.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script src="/content/js/jquery.form.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script>
        var pageUrl = '';
        $(function () {
            pageUrl = $("#datatable").attr('data-pageurl');
            $('#searchForm').ajaxSearch('#gridview', ajaxgrid_reset);
            $("#datatable").ajaxTable();
            ajaxgrid_reset();
            Xms.Web.Form($('#copyForm'), function (response) {
                if (response.IsSuccess) {
                    Xms.Web.Toast(response.Content, true);
                    $('#copyModal').modal('hide');
                    //location.reload(true);
                    rebind();
                    return;
                }
                Xms.Web.Alert(false, response.Content);
            });
        });
        function ajaxgrid_reset() {
            pag_init();
            Xms.Web.DataTable($("#datatable"));
        }
        function pag_init() {
            $('#page-selection').bootpag({
                total: $('#page-selection').attr('data-total')
                , maxVisible: 10
                , page: $('#page-selection').attr('data-page')
                , leaps: false
                , prev: '&lsaquo;'
                , next: '&rsaquo;'
                , firstLastUse: true
                , first: '&laquo;'
                , last: '&raquo;'
            }).on("page", function (event, /* page number here */ num) {
                event.preventDefault();
                pageUrl = $("#datatable").attr('data-pageurl');
                var url = $.setUrlParam(pageUrl, 'page', num);
                $("#gridview").ajaxLoad(url, "#gridview", function (response) {
                    ajaxgrid_reset();
                });
                return false;
            });
        }
        function rebind() {
            $('#searchForm').submit();
        }
        function CopyRecord(id) {
            $('#copyForm').find('input[name=systemformid]').val(id);
            $('#copyModal').modal('show');
        }
        function CopyPost() {

            $('#copyForm').submit();
        }
        function CustomButtons(id, entityid, flag, buttons) {
            var custombuttons = buttons ? JSON.parse(buttons) : null;
            console.log(custombuttons)
            var d = { entityid: entityid, objectid: id, iscustombutton: flag, custombuttons: custombuttons, buttonarea: 'form', callback:'CustomButtons_Callback' };
            Xms.Web.OpenDialog('/customize/ribbonbutton/dialog', null, d);
        }
        function CustomButtons_Callback(result, inputid) {
            console.log(result);
            var custombuttons = [];
            if (result.iscustombutton) {
                $(result.custombuttons).each(function (i, n) {
                    custombuttons.push(n.id);
                });
            }
            Xms.Web.Post('/customize/systemform/SetFormButtons', { recordid: result.objectid, iscustombutton: result.iscustombutton, buttons: custombuttons }, function (response) {
                if (response.IsSuccess) {
                    Xms.Web.Toast(response.Content, true);
                    rebind();
                    return;
                }
                Xms.Web.Alert(false, response.Content);
            });
        }
    </script>
}