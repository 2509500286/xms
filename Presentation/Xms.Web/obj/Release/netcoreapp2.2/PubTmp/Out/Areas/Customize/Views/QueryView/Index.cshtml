@model Xms.Web.Customize.Models.QueryViewModel

    <div class="panel panel-info" id="gridview">
        <div class="panel-heading">
            <div class="panel-title">
                <strong>@app.PrivilegeTree?.LastOrDefault().DisplayName</strong>
                <div class="pull-right">
                    <a class="btn btn-info btn-xs" data-toggle="collapse"
                       href="#collapseOne">
                        <span class="caret"></span> 查询
                    </a>
                    <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/queryview/createqueryview?solutionid=@Model.SolutionId&entityid=@Model.EntityId">
                        <span class="glyphicon glyphicon-file"></span> 新增
                    </a>
                </div>
            </div>
        </div>
        <div id="collapseOne" class="panel-collapse collapse">
            <!--in-->
            <div class="panel-body">
                <form action="/@app.OrganizationUniqueName/customize/@app.ControllerName/@app.ActionName" method="get" id="searchForm" class="form-horizontal" role="form">
                    @Html.HiddenFor(x => x.SolutionId)
                    @Html.HiddenFor(x => x.EntityId)
                    <div class="form-group col-sm-6">
                        <label class="col-sm-3 control-label" for="Name">名称</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-search"></span> 查询</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped table-condensed" id="datatable" data-refresh="rebind()" data-ajax="true" data-ajaxcontainer="gridview" data-ajaxcallback="ajaxgrid_reset()" data-sortby="@Model.SortBy.ToLower()" data-sortdirection="@Model.SortDirection" data-pageurl="@app.Url">
                <thead>
                    <tr>
                        <th width="2%"><input type="checkbox" name="checkall" /></th>
                        <th data-name="name">
                            名称
                        </th>
                        <th width="10%" data-name="isdefault">
                            默认
                        </th>
                        <th width="10%" data-name="isprivate">
                            类型
                        </th>
                        <th width="10%" data-name="isdisabled">
                            状态
                        </th>
                        <th width="15%" data-name="createdon">
                            创建时间
                        </th>
                        <th width="30%">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr data-dbclick="location.href='@("/"+app.OrganizationUniqueName)/customize/queryview/editqueryview?id=@item.QueryViewId&solutionid=@Model.SolutionId'">
                            <td><input type="checkbox" value="@item.QueryViewId" name="recordid" /></td>
                            <td>@item.Name</td>
                            <td>@Html.Raw(item.IsDefault ? "<span class=\"label label-info\">是</span>" : "<span class=\"label label-default\">否</span>")</td>
                            <td>@Html.Raw(item.IsPrivate ? "<span class=\"label label-info\">个人</span>" : "<span class=\"label label-info\">公共</span>")</td>
                            <td>@Html.Raw(item.StateCode == RecordState.Disabled ? "<span class=\"label label-default\">禁用</span>" : "<span class=\"label label-info\">启用</span>")</td>
                            <td>@item.CreatedOn</td>
                            <td>
                                <a class="btn btn-info btn-xs" href="@("/"+app.OrganizationUniqueName)/entity/list?queryviewid=@item.QueryViewId" target="_blank"><span class="glyphicon glyphicon-play-circle"></span> 预览</a>
                                <a class="btn btn-default btn-xs" href="@("/"+app.OrganizationUniqueName)/customize/queryview/editqueryview?id=@item.QueryViewId&solutionid=@Model.SolutionId"><span class="glyphicon glyphicon-edit"></span> 编辑</a>
                                <a class="btn btn-default btn-xs" href="javascript:CopyRecord('@item.QueryViewId')"><span class="glyphicon glyphicon-file"></span> @app.T["copy"]</a>
                                @if (!item.IsDefault)
                                {
                                    <a class="btn btn-warning btn-xs" href="javascript:Xms.Web.Del('@item.QueryViewId','/customize/queryview/deletequeryview',false,rebind,null,'确定删除？请提前备份数据',true)"><span class="glyphicon glyphicon-trash"></span> 删除</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="7" class="active">
                            <div class="form-group form-inline" role="form">
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/queryview/deletequeryview" data-role="delete" data-tooltip="删除后相关数据也将一并删除，请提前备份数据"><span class="glyphicon glyphicon-trash"></span> 批量删除</button>
                                <button type="button" class="btn btn-xs btn-primary" data-action="/customize/queryview/SetQueryViewDefault?isdefault=true&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-check"></span> 设为默认</button>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-xs btn-primary" data-action="/customize/queryview/SetQueryViewState?isenabled=true&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-ok-circle"></span> 启用</button>
                                    <button type="button" class="btn btn-xs btn-primary" data-action="/customize/queryview/SetQueryViewState?isenabled=false&entityid=@Model.EntityId" data-role="update"><span class="glyphicon glyphicon-ban-circle"></span> 禁用</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-4">
                    @(app.T["pagination_label"].Replace("{page}", Model.Page.ToString()).Replace("{totalpages}", Model.TotalPages.ToString()).Replace("{totalitems}", Model.TotalItems.ToString()))
                </div>
                <div id="page-selection" class="col-sm-8" data-total="@Model.TotalPages" data-page="@Model.Page"></div>
            </div>
        </div>
    </div>
<!-- （Modal） -->
<div class="modal fade" id="copyModal" tabindex="-1" role="dialog"
     aria-labelledby="copyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">
                    @app.T["times_sign"]
                </button>
                <h4 class="modal-title" id="navGroupModalLabel">
                    @(app.T["copy"] + app.T["queryview"])
                </h4>
            </div>
            <div class="modal-body">
                <form id="copyForm" action="@("/"+app.OrganizationUniqueName)/customize/queryview/copyqueryview" method="post" class="form-horizontal">
                    <input name="queryviewid" type="hidden" />
                    <div class="form-group row">
                        <label for="" class="col-sm-2 col-md-2 col-xs-2  control-label">@app.T["name"]</label>
                        <div class="col-sm-10 col-md-10 col-xs-10">
                            <input id="name" name="name" type="text" class="form-control input-sm required" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span> @app.T["cancel"]
                </button>
                <button type="button" class="btn btn-primary" onclick="CopyPost()">
                    <span class="glyphicon glyphicon-ok"></span> @app.T["confirm"]
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Header {
}
@section Scripts {
    <script src="/content/js/jquery.bootpag.min.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script src="/content/js/jquery.form.js?v=@app.PlatformSettings.VersionNumber"></script>
    <script>
        var pageUrl = '';
        $(function () {
            pageUrl = $("#datatable").attr('data-pageurl');
            $('#searchForm').ajaxSearch('#gridview', ajaxgrid_reset);
            $("#datatable").ajaxTable();
            ajaxgrid_reset();
        });
        function ajaxgrid_reset() {
            pag_init();
            Xms.Web.DataTable($("#datatable"));
            $("#datatable").tableHdResize();
        }
        function pag_init() {
            $('#page-selection').bootpag({
                total: $('#page-selection').attr('data-total')
                , maxVisible: 10
                , page: $('#page-selection').attr('data-page')
                , leaps: false
                , prev: '&lsaquo;'
                , next: '&rsaquo;'
                , firstLastUse: true
                , first: '&laquo;'
                , last: '&raquo;'
            }).on("page", function (event, /* page number here */ num) {
                event.preventDefault();
                pageUrl = $("#datatable").attr('data-pageurl');
                var url = $.setUrlParam(pageUrl, 'page', num);
                $("#gridview").ajaxLoad(url, "#gridview", function (response) {
                    ajaxgrid_reset();
                });
                return false;
            });
        }
        function rebind() {
            $('#searchForm').submit();
        }
        function CopyRecord(id) {
            $('#copyForm').find('input[name=queryviewid]').val(id);
            $('#copyModal').modal('show');
        }
        function CopyPost() {
            $('#copyForm').ajaxForm(function (response) {
                if (response.IsSuccess) {
                    Xms.Web.Toast(response.Content, true);
                    $('#copyModal').modal('hide');
                    //location.reload(true);
                    rebind();
                    return;
                }
                Xms.Web.Alert(false, response.Content);
            });
            $('#copyForm').submit();
        }
    </script>
}